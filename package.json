{
  "name": "colord",
  "version": "2.9.3",
  "description": "ðŸ‘‘ A tiny yet powerful tool for high-performance color manipulations and conversions",
  "keywords": [
    "color",
    "parser",
    "convert",
    "tiny",
    "hex",
    "rgb",
    "hsl",
    "hsv",
    "hwb",
    "lab",
    "lch",
    "xyz",
    "css",
    "color-names",
    "a11y",
    "cmyk",
    "mix",
    "minify",
    "harmonies"
  ],
  "repository": "omgovich/colord",
  "author": "Vlad Shilov <omgovich@ya.ru>",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./plugins/a11y": {
      "types": "./dist/plugins/a11y.d.ts",
      "import": "./dist/plugins/a11y.mjs"
    },
    "./plugins/cmyk": {
      "types": "./dist/plugins/cmyk.d.ts",
      "import": "./dist/plugins/cmyk.mjs"
    },
    "./plugins/harmonies": {
      "types": "./dist/plugins/harmonies.d.ts",
      "import": "./dist/plugins/harmonies.mjs"
    },
    "./plugins/hwb": {
      "types": "./dist/plugins/hwb.d.ts",
      "import": "./dist/plugins/hwb.mjs"
    },
    "./plugins/lab": {
      "types": "./dist/plugins/lab.d.ts",
      "import": "./dist/plugins/lab.mjs"
    },
    "./plugins/lch": {
      "types": "./dist/plugins/lch.d.ts",
      "import": "./dist/plugins/lch.mjs"
    },
    "./plugins/minify": {
      "types": "./dist/plugins/minify.d.ts",
      "import": "./dist/plugins/minify.mjs"
    },
    "./plugins/mix": {
      "types": "./dist/plugins/mix.d.ts",
      "import": "./dist/plugins/mix.mjs"
    },
    "./plugins/names": {
      "types": "./dist/plugins/names.d.ts",
      "import": "./dist/plugins/names.mjs"
    },
    "./plugins/xyz": {
      "types": "./dist/plugins/xyz.d.ts",
      "import": "./dist/plugins/xyz.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "/dist",
    "/types"
  ],
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "size": "npm run build && size-limit",
    "check-types": "tsc --noEmit true",
    "test": "jest tests --coverage",
    "benchmark": "tsc --outDir bench --skipLibCheck --esModuleInterop ./tests/benchmark.ts && node ./bench/tests/benchmark.js && rm -rf ./bench",
    "build": "rollup --config",
    "release": "npm run build && cp *.json dist && cp *.md dist",
    "check-release": "npm run release -- --dry-run"
  },
  "dependencies": {},
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@types/jest": "^29.5.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "ac-colors": "^1.4.2",
    "benny": "^3.6.15",
    "chroma-js": "^2.1.1",
    "color": "^3.1.3",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.6",
    "jest": "^29.6.0",
    "prettier": "^2.8.8",
    "rollup": "3.26.1",
    "rollup-plugin-dts": "^5.3.0",
    "size-limit": "^4.10.1",
    "tinycolor2": "^1.4.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ]
  },
  "prettier": {
    "printWidth": 100
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "import": "{ colord }",
      "limit": "2 KB"
    },
    {
      "path": "dist/plugins/a11y.mjs",
      "limit": "0.5 KB"
    },
    {
      "path": "dist/plugins/cmyk.mjs",
      "limit": "1 KB"
    },
    {
      "path": "dist/plugins/harmonies.mjs",
      "limit": "0.5 KB"
    },
    {
      "path": "dist/plugins/hwb.mjs",
      "limit": "1 KB"
    },
    {
      "path": "dist/plugins/lab.mjs",
      "limit": "1.5 KB"
    },
    {
      "path": "dist/plugins/lch.mjs",
      "limit": "1.5 KB"
    },
    {
      "path": "dist/plugins/minify.mjs",
      "limit": "0.6 KB"
    },
    {
      "path": "dist/plugins/mix.mjs",
      "limit": "1 KB"
    },
    {
      "path": "dist/plugins/names.mjs",
      "limit": "1.5 KB"
    },
    {
      "path": "dist/plugins/xyz.mjs",
      "limit": "1 KB"
    }
  ]
}
